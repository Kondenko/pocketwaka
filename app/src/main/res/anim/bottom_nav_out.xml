<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="90"
    android:shareInterpolator="true"
    >
    <scale
        android:fromXScale="1"
        android:fromYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="@fraction/main_transition_scale_collapsed"
        android:toYScale="@fraction/main_transition_scale_collapsed"
        />
    <alpha
        android:fromAlpha="1"
        android:toAlpha="0"
        />
</set>