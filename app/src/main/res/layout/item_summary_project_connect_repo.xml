<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_summary_project_card_vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_all_divider"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:drawableEnd="@drawable/ic_add_repository"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_summary_project_no_repo_message"
        android:paddingTop="@dimen/padding_summary_project_card_vertical"
        android:paddingEnd="@dimen/padding_summary_project_no_repo_message"
        android:text="@string/summary_projects_label_no_repo"
        android:textColor="@color/color_text_secondary"
        android:textSize="14sp"
        />

</LinearLayout>
