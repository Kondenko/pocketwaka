<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
    android:background="?selectableItemBackground"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/padding_summary_project_no_repo_message"
        android:layout_marginEnd="@dimen/padding_summary_project_no_repo_message"
        android:src="@drawable/ic_add_repository"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/padding_summary_project_no_repo_message"
        android:layout_marginEnd="@dimen/padding_summary_project_no_repo_message"
        android:text="@string/summary_projects_label_no_repo"
        android:textColor="@color/color_text_primary"
        android:textSize="12sp"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/color_all_divider"
        />

</RelativeLayout>