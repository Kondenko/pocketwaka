<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout_connect_repo"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_summary_project_card_vertical"
    >

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_summary_project_no_repo_message"
        android:layout_marginTop="@dimen/padding_summary_project_card_vertical"
        android:paddingEnd="@dimen/padding_summary_project_no_repo_message"
        android:text="@string/summary_projects_label_no_repo"
        android:textColor="@color/color_text_secondary"
        android:textSize="13sp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/divider"
        android:layout_toStartOf="@id/button_summary_project_connect_repo"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_all_divider"
        />

    <ImageButton
        android:id="@+id/button_summary_project_connect_repo"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="@dimen/size_summary_icon_connect_repo"
        android:layout_height="@dimen/size_summary_icon_connect_repo"
        android:src="@drawable/ic_add_repository"
        android:layout_alignTop="@id/label"
        android:layout_alignParentEnd="true"
        android:paddingEnd="2dp"
        android:paddingTop="2dp"
        android:layout_marginEnd="@dimen/margin_summary_icon_connect_repo_horizontal"
        />

</RelativeLayout>
