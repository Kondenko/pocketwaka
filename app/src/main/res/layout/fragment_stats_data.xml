<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="dataWrapper"
            type="com.kondenko.pocketwaka.api.model.stats.DataWrapper"
            />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.kondenko.pocketwaka.ui.ObservableScrollView
            android:id="@+id/statsScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.kondenko.pocketwaka.screens.fragments.stats.FragmentStats"
            >

            <android.support.constraint.ConstraintLayout
                android:id="@+id/rootLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/textViewHeaderTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/stats_header_total"
                    android:textAppearance="@style/TextAppearance.App.Stats.Header"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintLeft_toLeftOf="@+id/textViewTotal"
                    app:layout_constraintRight_toRightOf="@+id/textViewTotal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="spread"
                    />

                <TextView
                    android:id="@+id/textViewHeaderAvg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/stats_header_daily_average"
                    android:textAppearance="@style/TextAppearance.App.Stats.Header"
                    app:layout_constraintHorizontal_bias="0.49"
                    app:layout_constraintLeft_toLeftOf="@+id/textViewDailyAverage"
                    app:layout_constraintRight_toRightOf="@+id/textViewDailyAverage"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/textViewTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@{dataWrapper.stats.humanReadableTotal}"
                    android:textAppearance="@style/TextAppearance.App.Stats.TotalInfo"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/guidelineCenterVertical"
                    app:layout_constraintTop_toBottomOf="@+id/textViewHeaderTotal"
                    tools:text="28 hrs 57 mins"
                    />

                <TextView
                    android:id="@+id/textViewDailyAverage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@{dataWrapper.stats.humanReadableDailyAverage}"
                    android:textAppearance="@style/TextAppearance.App.Stats.TotalInfo"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="@+id/guidelineCenterVertical"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewHeaderAvg"
                    tools:text="4 hrs 8 mins"
                    />

                <include
                    android:id="@+id/include_best_day"
                    layout="@layout/layout_stats_best_day"
                    android:layout_width="0dp"
                    android:layout_height="112dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="24dp"
                    android:clipToPadding="false"
                    android:visibility="@{(dataWrapper.stats.bestDay != null &amp;&amp; dataWrapper.stats.bestDay.totalSeconds &gt; 0) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayoutCards"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline_best_day"
                    app:layout_constraintVertical_bias="0.5"
                    bind:dataWrapper="@{dataWrapper}"
                    />

                <android.support.constraint.Guideline
                    android:id="@+id/guidelineCenterVertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"
                    tools:layout_editor_absoluteX="180dp"
                    tools:layout_editor_absoluteY="81dp"
                    />

                <LinearLayout
                    android:id="@+id/linearLayoutCards"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginEnd="@dimen/margin_all_card_inner"
                    android:layout_marginLeft="@dimen/margin_all_card_inner"
                    android:layout_marginRight="@dimen/margin_all_card_inner"
                    android:layout_marginStart="@dimen/margin_all_card_inner"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/include_best_day"
                    app:layout_constraintVertical_bias="0.5"
                    tools:background="@android:color/darker_gray"
                    tools:layout_height="400dp"
                    />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_best_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="67dp"
                    />

            </android.support.constraint.ConstraintLayout>

        </com.kondenko.pocketwaka.ui.ObservableScrollView>

        <View
            android:id="@+id/shadowView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_stats_shadow"
            android:layout_gravity="top"
            android:alpha="0"
            android:background="@drawable/stats_shadow"
            />

    </FrameLayout>

</layout>