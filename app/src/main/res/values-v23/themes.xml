<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:statusBarColor">@color/color_window_background</item>
        <item name="android:windowBackground">@color/color_window_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="LoginTheme" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlNormal">?colorAccent</item>
        <item name="android:windowBackground">@color/color_login_background</item>
        <item name="android:statusBarColor">@color/color_login_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>